<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:paddingRight="16dp"
    android:paddingLeft="16dp">

    <ImageView
        android:id="@+id/user_recipe_list_image"
        android:layout_centerVertical="true"
        android:layout_width="56dp"
        android:layout_height="56dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/user_recipe_list_image"
        android:paddingStart="16dp"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/user_recipe_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"
            android:text="Title" />

        <TextView
            android:id="@+id/user_recipe_list_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Difficulty" />

        <TextView
            android:id="@+id/user_recipe_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"/>

    </LinearLayout>

    <!--ImageButton
        android:id="@+id/user_product_list_matchmaking_launch_button"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@mipmap/matchmaking_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" /-->
    <ImageView
        android:id="@+id/user_recipe_list_favourite"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_non_filled_star"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:tag="R.mipmap.ic_non_filled_star"/>

</RelativeLayout>
